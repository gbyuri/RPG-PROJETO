PROCEDIMENTO MORCEGO
VAR ENCONTRO:INTEIRO
INICIO
   escreval("                                                                ____________________________________________________________________")
   ESCREVAL("                                                               |                       >VOCÊ ENCONTROU UMA ARANHA<                  |")
   ESCREVAL("                                                               |                              > LEVEL",MONSTROLEVEL," <                           |")
   ESCREVAL("                                                               |                                                                    |")
   ESCREVAL("                                                               |                                                                    |")
   ESCREVAL("                                                               |      ,*-~'`^'*u_                                _u*'^`'~-*,        |")
   ESCREVAL("                                                               |   p!^       /  jPw                            w9j \        ^!p     |")
   ESCREVAL("                                                               |  w^.._      /      '\_                      _/'     \        _.^w  |")
   ESCREVAL("                                                               |       *_   /          \_      _    _      _/         \     _*      |")
   ESCREVAL("                                                               |         q /           / \q   ( `--` )   p/ \          \   p        |")
   ESCREVAL("                                                               |         jj5****._    /    ^\_) o  o (_/^    \    _.****6jj         |")
   ESCREVAL("                                                               |                  *_ /      '==) ;; (=='      \ _*                  |")
   ESCREVAL("                                                               |                   `/.w***,   /(    )\   ,***w.\'                   |")
   ESCREVAL("                                                               |                    ^ ilmk ^c/ )    ( \c^      ^                    |")
   ESCREVAL("                                                               |                            'V')_)(_('V'                            |")
   ESCREVAL("                                                               |                                `` ``                               |")
   ESCREVAL("                                                               |                                                                    |")
   ESCREVAL("                                                               |                                                                    |")
   escreval("                                                               |____________________________________________________________________|")
   ESCREVAL("                                                                                          [1] LUTAR [2] FUGIR")
   ESCREVA("                                                                                                  >")
   LEIA(ENCONTRO)
   ESCOLHA ENCONTRO
   CASO 1
      LIMPATELA
      COMBATE
   CASO 2
      LIMPATELA
      ESCREVAL("                                                                                   VOCÊ FUGIU E RETORNARA À CIDADE!")
      TIMER 100
      TIMER 0
   FIMESCOLHA
FIMPROCEDIMENTO
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
PROCEDIMENTO COMBATE
VAR COMBATE:INTEIRO
INICIO
   escreval("                                                                ____________________________________________________________________")
   ESCREVAL("                                                               |                                                                     |")
   ESCREVAL("                                                               |                                                                     |")
   ESCREVAL("                                                               |                                                                     |")
   ESCREVAL("                                                               |                                                                     |")
   ESCREVAL("                                                               |>",MONSTRO," LEVEL:",MONSTROLEVEL:3:0,"--------------------------------------------------|")
   ESCREVAL("                                                               |     HP: ",MONSTROHP:2:0," /",MONSTROHPMAX:2:0,"   DANO:",MONSTRODANOMIN:3:0," ~ ",MONSTRODANOMAX:3:0,"-------------------------------------|")
   ESCREVAL("                                                               |                                                                     |")
   ESCREVAL("                                                               |                                                                     |")
   ESCREVAL("                                                               |>",NOMEJOGADOR," LEVEL:",LEVELJOGADOR:3:0,"--------------------------------------------------|")
   ESCREVAL("                                                               |     HP: ",HPJOGADOR:2:0," /",HPMAXJOGADOR:2:0,"   DANO:",DANOMIN:3:0," ~ ",DANOMAX:3:0,"-------------------------------------|")
   ESCREVAL("                                                               |                                                                     |")
   ESCREVAL("                                                               |                                                                     |")
   ESCREVAL("                                                               |                                                                     |")
   ESCREVAL("                                                               |                                                                     |")
   ESCREVAL("                                                               |____________________________________________________________________ |")
   ESCREVAL("                                                               |                                  |                                  |")
   ESCREVA("                                                               | [1] ATACAR      [3]")
   SE LEVELJOGADOR >=10 ENTAO
      ESCREVA(SKILL2)
   SENAO
      ESCREVA("VAZIO         |")
   FIMSE
   se ataque <> 0 entao
      ESCREVAL(">VOCÊ CAUSOU",ATAQUE:3:0," DE DANO!          |")
   SENAO
      ESCREVAL("                                  |")
   FIMSE
   ESCREVAL("                                                               |                                  |                                  |")
   ESCREVA("                                                               | [2]")
   SE LEVELJOGADOR >= 5 entao
      ESCREVA(SKILL1)
   SENAO
      ESCREVA("VAZIO        ")
   FIMSE
   ESCREVA("[4]")
   SE LEVELJOGADOR >= 15 ENTAO
      ESCREVA(SKILL3)
   SENAO
      ESCREVA("VAZIO         ")
   FIMSE
   ESCREVA("|")
   SE ATAQUEMONSTRO <> 0 ENTAO
      ESCREVAL(">VOCÊ RECEBEU",ATAQUEMONSTRO:3:0," DE DANO!         |")
   SENAO
      ESCREVAL("                                  |")
   FIMSE
   ATAQUE <- 0
   ATAQUEMONSTRO <-0
   ESCREVAL("                                                               |__________________________________|__________________________________|")
   SE (MONSTROHP>0) E (HPJOGADOR>0)ENTAO
      escreval("                                                                                          >O QUE VAI FAZER<")
      ESCREVA("                                                                                                     ")
      LEIA(COMBATE)
      ESCOLHA COMBATE
      CASO 1
         ALEATORIO DANOMIN,DANOMAX
         LEIA(ATAQUE)
         ALEATORIO OFF
         MONSTROHP <- MONSTROHP - ATAQUE
         SE MONSTROHP < 0 ENTAO
            MONSTROHP <- 0
         FIMSE
         ALEATORIO MONSTRODANOMIN,MONSTRODANOMAX
         LEIA(ATAQUEMONSTRO)
         aleatorio off
         HPJOGADOR <- HPJOGADOR - ATAQUEMONSTRO
         SE HPJOGADOR < 0 ENTAO
            HPJOGADOR <- 0
         FIMSE
         LIMPATELA
         COMBATE
      FIMESCOLHA
   SENAO
      SE (MONSTROHP = 0) ENTAO
         ESCREVAL("                                                                                      VOCÊ DERROTOU UM ",MONSTRO)
         ESCREVAL("                                                                                              <ENTER>")
         ESCREVA("                                                                                                  ")
         LEIA(CONTINUAR)
         EXPERIENCIA
         MONSTRO <- ""
         TAMANHOMONSTRO <- COMPR(MONSTRO)
         MONSTROLEVEL <- 0
         MONSTROHP<-0
         MONSTROHPMAX<- 0
         MONSTROATK<-0
         MONSTRODEF<-0
         MONSTROEXP<-0
         MONSTRODANOMIN<-0
         MONSTRODANOMAX<-0
         LIMPATELA
         PORTAL
      SENAO
         SE HPJOGADOR = 0 ENTAO
            HPJOGADOR <-1
            EXPJOGADOR <- EXPJOGADOR+(EXPJOGADOR*(10/100))
            MONSTRO <- ""
            TAMANHOMONSTRO <- COMPR(MONSTRO)
            MONSTROLEVEL <- 0
            MONSTROHP<-0
            MONSTROHPMAX<- 0
            MONSTROATK<-0
            MONSTRODEF<-0
            MONSTROEXP<-0
            MONSTRODANOMIN<-0
            MONSTRODANOMAX<-0
            LIMPATELA
            PORTAL
         FIMSE
      FIMSE
   FIMSE
FIMPROCEDIMENTO
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
PROCEDIMENTO EXPERIENCIA
INICIO
   LIMPATELA
   ESCREVAL("                                                                                   <VOCÊ RECEBEU",MONSTROEXP," PONTOS DE EXPERIÊNCIA!")
   EXPJOGADOR <- EXPJOGADOR + MONSTROEXP
   SE EXPJOGADOR = EXPMAXJOGADOR ENTAO
      HPJOGADOR <- HPMAXJOGADOR
      LEVELJOGADOR <- LEVELJOGADOR + 1
      EXPMAXJOGADOR <- 10*LEVELJOGADOR
      EXPJOGADOR <- 0
      ESCREVAL("                                                                                <PARABÊNS, VOCÊ SUBIU DE LEVEL, LEVEL ATUAL>",LEVELJOGADOR," <")
      ESCREVA("                                                                                                       <ENTER>")
      ESCREVA("                                                                                                           ")
      LEIA(CONTINUAR)
      SE CLASSEJOGADOR = "GUERREIRO" ENTAO
         FOR<-FOR+2
         DES<-DES+1
         INTE<-INTE+1
         HPJOGADOR<-HPJOGADOR +(FOR*(30/100))
         HPMAXJOGADOR <- HPJOGADOR
         MPJOGADOR<-MPJOGADOR+(INTE*(10/100))
         MPMAXJOGADOR<- MPJOGADOR
         ATKJOGADOR<-ATKJOGADOR + (FOR*(10/100))
         DANOMIN<-(FOR+ATKJOGADOR)/2
         DANOMAX<-(FOR+ATKJOGADOR)
         ACERTO<-ACERTO + (DES*(10/100))
         DEFJOGADOR<-DEFJOGADOR + (FOR*(30/100))
      SENAO
         SE CLASSEJOGADOR ="ARQUEIRO " ENTAO
            FOR<-FOR+1
            DES<-DES+2
            INTE<-INTE+1
            HPJOGADOR<-HPJOGADOR +(FOR*(20/100))
            HPMAXJOGADOR <- HPJOGADOR
            MPJOGADOR<-MPJOGADOR+(INTE*(20/100))
            MPMAXJOGADOR<- MPJOGADOR
            ATKJOGADOR<-5 + (DES*(20/100))
            DANOMIN<-(DES+ATKJOGADOR)/2
            DANOMAX<-(DES+ATKJOGADOR)
            ACERTO<-ACERTO + (DES*(20/100))
            DEFJOGADOR<-DEFJOGADOR + (FOR*(20/100))
         SENAO
            SE CLASSEJOGADOR = "MAGO     " ENTAO
               FOR<-FOR+1
               DES<-DES+1
               INTE<-INTE+2
               HPJOGADOR<-HPJOGADOR +(FOR*(10/100))
               HPMAXJOGADOR <- HPJOGADOR
               MPJOGADOR<-MPJOGADOR+(INTE*(30/100))
               MPMAXJOGADOR<- MPJOGADOR
               ATKJOGADOR<-ATKJOGADOR + (INTE*(30/100))
               DANOMIN<-(INTE+ATKJOGADOR)/2
               DANOMAX<-(INTE+ATKJOGADOR)
               ACERTO<-ACERTO + (DES*(10/100))
               DEFJOGADOR<-DEFJOGADOR + (FOR*(10/100))
            FIMSE
         FIMSE
      FIMSE
   FIMSE
FIMPROCEDIMENTO
procedimento geraritem //-----------------------------------------------------------
VAR X:INTEIRO
inicio
   aleatorio 1,10
   LEIA(X)
   aleatorio off
   ESCOLHA(X)
   CASO 1
      ITEM<-"ESPADA"
   CASO 2
      ITEM<-"ELMO"
   CASO 3
      ITEM<-"ARMADURA"
      CASO4
      ITEM<-"ANEL"
   CASO 5
      ITEM<-"POÇÃO DE HP"
   CASO 6
      ITEM<-"POÇÃO DE MP"
   OUTROCASO

   FIMESCOLHA
      ESCREVAL("                                                                                 >VOCÊ NÃO GANHOU NADA<")
      se item <> "" entao
         escreval("Loot >>>",item,"<<<")
         se item = "ESPADA" entao
            se itens[1] = "" entao
               itens[1] <- item
               escreval("                                                                        >>>",item,"<<< foi equipado")
               buff[1] <- "Atk+3"
               status[1] <- "Normal"
               jogadoratkx <- jogadoratkx + 3
               item <- ""
            senao
               escreval("                                                                        Sua arma ganhou 1 ponto de experiencia")
               armaexp <- armaexp + 1
               item <- ""
               se armaexp = armaexpmax entao
                  armalevel <- armalevel+1
                  armaexpmax <- 5*armalevel
                  SE armalevel= 2 entao
                     buff[1] <- "ATK+6"
                     status[1] <- "INCOMUM"
                     jogadoratkx <- jogadoratkx + 3
                     armaexp <- 0
                     item <- ""
                  senao
                     SE armalevel= 3 entao
                        buff[1] <- "ATK+9"
                        status[1] <- "RARO"
                        jogadoratkx <- jogadoratkx + 3
                        armaexp <- 0
                        item <- ""
                     senao
                        SE armalevel= 4 entao
                           buff[1] <- "ATK+12"
                           status[1] <- "ÉPICO"
                           jogadoratkx <- jogadoratkx + 3
                           armaexp <- 0
                           item <- ""
                        senao
                           SE armalevel= 5 entao
                              buff[1] <- "ATK+15"
                              status[1] <- "LENDÁRIO"
                              jogadoratkx <- jogadoratkx + 3
                              armaexp <- 0
                              item <- ""
                           FIMSE
                        FIMSE
                     FIMSE
                  FIMSE
               FIMSE
            FIMSE
         SENAO
            se item = "ELMO" entao
               se itens[2] = "" entao
                  itens[2] <- item
                  escreval("                                                                     >>>",item,"<<< foi equipado")
                  buff[2] <- "Def+1"
                  status[2] <- "Normal"
                  jogadordefx <- jogadordefx + 1
                  item <- ""
               SENAO
                  escreval("                                                                     Seu elmo ganhou 1 ponto de experiencia")
                  elmoexp <- elmoexp + 1
                  item <- ""
                  se elmoexp = elmoexpmax entao
                     elmolevel <- elmolevel + 1
                     elmoexpmax <- 5*elmolevel
                     SE ELMOLEVEL = 2 ENTAO
                        buff[2] <- "Def+2"
                        status[2] <- "INCOMUM"
                        jogadordefx <- jogadordefx + 1
                        elmoexp <- 0
                        item <- ""
                     SENAO
                        SE ELMOLEVEL = 3 ENTAO
                           buff[2] <- "Def+3"
                           status[2] <- "RARO"
                           jogadordefx <- jogadordefx + 1
                           elmoexp <- 0
                           item <- ""
                        SENAO
                           SE ELMOLEVEL = 4 ENTAO
                              buff[2] <- "Def+4"
                              status[2] <- "ÉPICO"
                              jogadordefx <- jogadordefx + 1
                              elmoexp <- 0
                              item <- ""
                           SENAO
                              SE ELMOLEVEL = 5 ENTAO
                                 buff[2] <- "Def+5"
                                 status[2] <- "LENDÁRIO"
                                 jogadordefx <- jogadordefx + 1
                                 elmoexp <- 0
                                 item <- ""
                              FIMSE
                           FIMSE
                        FIMSE
                     FIMSE
                  FIMSE
               FIMSE
            SENAO
               se item = "ARMADURA" entao
                  se itens[3] = "" entao
                     itens[3] <- item
                     escreval("                                                                  >>>",item,"<<< foi equipado")
                     buff[3] <- "Def+2 HP+3"
                     status[3] <- "Normal"
                     jogadordefx <- jogadordefx + 2
                     jogadorhpx <- jogadorhpx + 3
                     jogadorhpmax <- jogadorhpmax + jogadorhpx
                     item <- ""
                  SENAO
                     escreval("                                                                  Sua armadura ganhou 1 ponto de experiencia")
                     armaduraexp <- armaduraexp + 1
                     item <- ""
                     se armaduraexp = armaduraexpmax entao
                        armaduralevel <- armaduralevel+1
                        armaduraexpmax <- 5*armaduralevel
                        SE ARMADURALEVEL = 2 ENTAO
                           buff[3] <- "Def+4 HP+6"
                           status[3] <- "INCOMUM"
                           jogadordefx <- jogadordefx + 2
                           jogadorhpx <- jogadorhpx + 3
                           jogadorhpmax <- jogadorhpmax + jogadorhpx
                           armaduraexp <- 0
                           item <- ""
                        SENAO
                           SE ARMADURALEVEL = 3 ENTAO
                              buff[3] <- "Def+6 HP+9"
                              status[3] <- "Raro"
                              jogadordefx <- jogadordefx + 2
                              jogadorhpx <- jogadorhpx + 3
                              jogadorhpmax <- jogadorhpmax + jogadorhpx
                              armaduraexp <- 0
                              item <- ""
                           SENAO
                              SE ARMADURALEVEL = 4 ENTAO
                                 buff[3] <- "Def+8 HP+12"
                                 status[3] <- "ÉPICO"
                                 jogadordefx <- jogadordefx + 2
                                 jogadorhpx <- jogadorhpx + 3
                                 jogadorhpmax <- jogadorhpmax + jogadorhpx
                                 armaduraexp <- 0
                                 item <- ""
                              SENAO
                                 SE ARMADURALEVEL = 5 ENTAO
                                    buff[3] <- "Def+10 HP+15"
                                    status[3] <- "LENDÁRIO"
                                    jogadordefx <- jogadordefx + 2
                                    jogadorhpx <- jogadorhpx + 3
                                    jogadorhpmax <- jogadorhpmax + jogadorhpx
                                    armaduraexp <- 0
                                    item <- ""
                                 FIMSE
                              FIMSE
                           FIMSE
                        FIMSE
                     FIMSE
                  FIMSE
               SENAO
                  se item = "ANEL" entao
                     se itens[4] = "" entao
                        itens[4] <- item
                        escreval("                                                               >>>",item,"<<< foi equipado")
                        buff[4] <- "Hit+1 Atk+1 Def+1 Hp+1"
                        status[4] <- "NORMAL"
                        jogadoratkx <- jogadoratkx + 1
                        jogadordefx <- jogadordefx + 1
                        jogadorhpx  <- jogadorhpx  + 1
                        jogadorhpmax <- jogadorhpmax + jogadorhpx
                        item <- ""
                     SENAO
                        escreval("                                                               Seu Acessório ganhou 1 ponto de experiencia")
                        anelexp <- anelexp + 1
                        item <- ""
                        se anelexp = anelexpmax entao
                           anellevel <- anellevel+1
                           anelexpmax <- 5*anellevel
                           SE ANELLEVEL=2 ENTAO
                              buff[4] <- "Hit+2 Atk+2 Def+2 Hp+2"
                              status[4] <- "INCOMUM"
                              jogadoratkx <- jogadoratkx + 1
                              jogadordefx <- jogadordefx + 1
                              jogadorhpx  <- jogadorhpx  + 1
                              jogadorhpmax <- jogadorhpmax + jogadorhpx
                              anelexp <- 0
                              item <- ""
                           SENAO
                              SE ANELLEVEL=3 ENTAO
                                 buff[4] <- " Atk+3 Def+3 Hp+3"
                                 status[4] <- "RARO"
                                 jogadoratkx <- jogadoratkx + 1
                                 jogadordefx <- jogadordefx + 1
                                 jogadorhpx  <- jogadorhpx  + 1
                                 jogadorhpmax <- jogadorhpmax + jogadorhpx
                                 anelexp <- 0
                                 item <- ""
                              SENAO
                                 SE ANELLEVEL=4 ENTAO
                                    buff[4] <- " Atk+4 Def+4 Hp+4"
                                    status[4] <- "ÉPICO"
                                    jogadoratkx <- jogadoratkx + 1
                                    jogadordefx <- jogadordefx + 1
                                    jogadorhpx  <- jogadorhpx  + 1
                                    jogadorhpmax <- jogadorhpmax + jogadorhpx
                                    anelexp <- 0
                                    item <- ""
                                 SENAO
                                    SE ANELLEVEL=5 ENTAO
                                       buff[4] <- " Atk+5 Def+5 Hp+5"
                                       status[4] <- "LENDÁRIO"
                                       jogadoratkx <- jogadoratkx + 1
                                       jogadordefx <- jogadordefx + 1
                                       jogadorhpx  <- jogadorhpx  + 1
                                       jogadorhpmax <- jogadorhpmax + jogadorhpx
                                       anelexp <- 0
                                       item <- ""
                                    FIMSE
                                 FIMSE
                              FIMSE
                           FIMSE
                        FIMSE
                     FIMSE
                  FIMSE
               FIMSE
            FIMSE
         FIMSE
fimprocedimento

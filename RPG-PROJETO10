   escreval(" /",EXPMAXJOGADOR)
   escreval("Itens  ")
      se (itens[1] <> "") entao
         escreval("Arma ->",itens[1],"(",armaexp,"/",armaexpmax,")")
         escreval(" ")
      senao
         escreval(">VAZIO<")
         escreval(" ")

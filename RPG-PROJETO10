   ESCREVAL("                                                               |                                 (                                  |")
   ESCREVAL("                                                               |                                  )                                 |")
   ESCREVAL("                                                               |                                 (                                  |")
   ESCREVAL("                                                               |                          /\  .-'.'-.  /\                           |")
   ESCREVAL("                                                               |                         /\\|/  ,,,  \/|\|                          |")
   ESCREVAL("                                                               |                         |/\| ,;;;;;, |/\|                          |")
   ESCREVAL("                                                               |                         /|\|\;-'.'-;/|/\|                         |")
   ESCREVAL("                                                               |                        /|  \/   .   \/  \\                         |")
   ESCREVAL("                                                               |                       (| ,-_| \ | / |_-, |)                        |")
   ESCREVAL("                                                               |                         /|`__\.-.-./__`\\                          |")
   ESCREVAL("                                                               |                        /| /.-(() ())-.\ \\                         |")
   ESCREVAL("                                                               |                       (\ |)   '---'   (| /)                        |")
   ESCREVAL("                                                               |                        ` (|           |) `                         |")
   ESCREVAL("                                                               |                          \)           (/                           |")
   escreval("                                                               |____________________________________________________________________|")
   ESCREVAL("                                                                                          [1] LUTAR [2] FUGIR")

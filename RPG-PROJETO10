///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

PROCEDIMENTO CRIARPERSONAGEM
VAR Y,X:INTEIRO
   ADD:CARACTER
INICIO
   ADD <- " "
   ESCREVAL("                                                                          ___________________________________________________")
   ESCREVAL("                                                                         |           /\                                      |")
   ESCREVAL("                                                                         | _         )( ______________________               |")
   ESCREVAL("                                                                         |(_)/'/'/'/(**)______________________>              |")
   ESCREVA("                                                                         |           )(   NOME:",NOMEJOGADOR)
   SE NOMEJOGADOR <> "" ENTAO
      ESCREVAL("----------------------|")
   SENAO
      ESCREVAL("------------------------------|")
   FIMSE
   ESCREVA("                                                                         |           \/ CLASSE:",CLASSEJOGADOR)
   SE CLASSEJOGADOR <> "" ENTAO
      ESCREVAL("---------------------|")
   SENAO
      ESCREVAL("------------------------------|")
   FIMSE
   ESCREVAL("                                                                         |                                                   |")
   ESCREVAL("                                                                         |                 FOR:",FOR,"     HP:",HPJOGADOR:2:0,"------------------|")
   ESCREVAL("                                                                         |                 DES:",DES,"     MP:",MPJOGADOR:2:0,"                  |")
   ESCREVAL("                                                                         |                 INT:",INTE,"                ------------|")
   ESCREVAL("                                                                         |                                                   |")
   ESCREVAL("                                                                         |                 ATK:",ATKJOGADOR:2:0,"      DEF:",DEFJOGADOR:2:0,"----------------|")
   ESCREVAL("                                                                         |                                                   |")
   ESCREVAL("                                                                         |                       DANO",DANOMIN:2:0," ~",DANOMAX:2:0,"------------------|")
   ESCREVAL("                                                                         |                                      /\           |")
   ESCREVAL("                                                                         |               ______________________ )(         _ |")
   ESCREVAL("                                                                         |              <______________________(**)\'\'\'\(_)|")
   ESCREVAL("                                                                         |                                      )(           |")
   ESCREVAL("                                                                         |                                      \/           |")
   ESCREVAL("                                                                         |___________________________________________________|")
   SE NOMEJOGADOR = "" ENTAO
      ESCREVAL("                                                                                         < DIGA SEU NOME >")
      ESCREVAL("                                                                                < PRECISA CONTER ATÉ [8] CARACTERES >")
      ESCREVA("                                                                                              ")
      LEIA(NOMEJOGADOR)
      nomejogador <- maiusc(NOMEJOGADOR)
      TAMANHONOME <- COMPR(NOMEJOGADOR)
      SE (TAMANHONOME > 8)ENTAO
         ESCREVAL("                                                                          NOME INADEQUADO, PRECISA TER ATÉ [8] CARACTERES")
         ESCREVA("                                                                                               <ENTER>")
         LEIA(CONTINUAR)
         LIMPATELA
         NOMEJOGADOR <- ""
         TAMANHONOME <- 0
         CRIARPERSONAGEM
      SENAO
         LIMPATELA
         REPITA
            SE TAMANHONOME < 8 ENTAO
               NOMEJOGADOR <- NOMEJOGADOR+ADD
               TAMANHONOME <- COMPR(NOMEJOGADOR)
            FIMSE
         ATE TAMANHONOME = 8
         CRIARPERSONAGEM
      FIMSE
   SENAO
      SE (NOMEJOGADOR <> "") E (CLASSEJOGADOR = "") ENTAO
         ANIMACAOCLASSE
         ESCREVAL("                                                                                        < ESCOLHA SUA CLASSE >")
         ESCREVA("                                                                                                   ")
         LEIA(Y)
         ESCOLHA Y
         CASO 1
            CLASSEJOGADOR <- "GUERREIRO"
            FOR<- 3
            DES<- 1
            INTE<-1
            HPJOGADOR<-25 +(FOR*(30/100))
            HPMAXJOGADOR <- HPJOGADOR
            MPJOGADOR<-15+(INTE*(10/100))
            MPMAXJOGADOR<- MPJOGADOR
            ATKJOGADOR<-6 + (FOR*(10/100))
            DANOMIN<-(FOR+ATKJOGADOR)/2
            DANOMAX<-(FOR+ATKJOGADOR)
            ACERTO<-1 + (DES*(10/100))
            DEFJOGADOR<-15 + (FOR*(30/100))
            LEVELJOGADOR <- 1
            EXPJOGADOR <- 0
            EXPMAXJOGADOR <- 10*LEVELJOGADOR
            SKILL1 <- "INVESTIDA    "
            SKILL2 <- "CORTE CRUZ   "
            SKILL3 <- "PERFURAR     "
            LIMPATELA
            CRIARPERSONAGEM
         CASO 2
            CLASSEJOGADOR <-"ARQUEIRO "
            FOR<- 1
            DES<- 3
            INTE<-1
            HPJOGADOR<- 20 +(FOR*(20/100))
            HPMAXJOGADOR <- HPJOGADOR
            MPJOGADOR<-20+(INTE*(20/100))
            MPMAXJOGADOR<- MPJOGADOR
            ATKJOGADOR<-9 + (DES*(20/100))
            DANOMIN<-(DES+ATKJOGADOR)/2
            DANOMAX<-(DES+ATKJOGADOR)
            ACERTO<-1 + (DES*(20/100))
            DEFJOGADOR<-10 + (FOR*(20/100))
            LEVELJOGADOR <- 1
            EXPJOGADOR <- 0
            EXPMAXJOGADOR <- 10*LEVELJOGADOR
            SKILL1 <- "TIRO RAPIDO  "
            SKILL2 <- "TIRO PODEROSO"
            SKILL3 <- "TIRO CRITICO "
            LIMPATELA
            CRIARPERSONAGEM
         CASO 3
            CLASSEJOGADOR <- "MAGO     "

            FOR<- 1
            DES<- 1
            INTE<-3
            HPJOGADOR<-15 +(FOR*(10/100))
            HPMAXJOGADOR <- HPJOGADOR
            MPJOGADOR<-25+(INTE*(30/100))
            MPMAXJOGADOR<- MPJOGADOR
            ATKJOGADOR<-12 + (INTE*(30/100))
            DANOMIN<-(INTE+ATKJOGADOR)/2
            DANOMAX<-(INTE+ATKJOGADOR)
            ACERTO<-1 + (DES*(10/100))
            DEFJOGADOR<-5 + (FOR*(10/100))
            LEVELJOGADOR <- 1
            EXPJOGADOR <- 0
            EXPMAXJOGADOR <- 10*LEVELJOGADOR
            SKILL1 <- "LANÇA DE GELO"
            SKILL2 <- "TROVÃO        "
            SKILL3 <- "BOLA DE FOGO  "
            LIMPATELA
            CRIARPERSONAGEM
         FIMESCOLHA
      SENAO
         SE (NOMEJOGADOR <> "") E (CLASSEJOGADOR <> "") ENTAO
            LIVRO3
            ESCREVAL("                                                                                           < [1] OU [2] >")
            ESCREVA("                                                                                                 ")
            LEIA(X)
            ESCOLHA X
            CASO 1
               HUB <- VERDADEIRO
            CASO 2
               NOMEJOGADOR <- ""
               TAMANHONOME <- 0
               CLASSEJOGADOR <- ""
               FOR<- 0
               DES<- 0
               INTE<-0
               HPJOGADOR<-0
               HPMAXJOGADOR <- 0
               MPJOGADOR<-0
               MPMAXJOGADOR<- 0
               ATKJOGADOR<-0
               DANOMIN<-0
               DANOMAX<-0
               ACERTO<-0
               DEFJOGADOR<-0
               LEVELJOGADOR<- 0
               EXPJOGADOR <- 0
               EXPMAXJOGADOR <- 0
               sKILL1 <- ""
               SKILL2 <- ""
               SKILL3 <- ""
               LIMPATELA
               //ANIMACAOX
               CRIARPERSONAGEM
            FIMESCOLHA
         FIMSE
      FIMSE
   FIMSE
FIMPROCEDIMENTO
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
PROCEDIMENTO PORTAL
VAR F:REAL
   J,A,XA:INTEIRO
INICIO
   PARA A DE 1 ATE 10 FACA
      ANDAR[A] <- A
   FIMPARA
   escreval("                                                                       __________________________________________________ ")
   escreval("                                                                      |  |_|___|_ |_|___|__|         |___|___ |_|___|__|  |")
   escreval("                                                                      |  |___|___ |___|___||         |_|___|_ |___|___||  |")
   escreval("                                                                      |  |_|___|_ |_|___|__|         |___|___ |_|___|__|  |")
   escreval("                                                                      |  |___|___ |___|___||         |_|___|_ |___|___||  |")
   escreval("                                                                      |  |_|___|_ |_|___|__|         |___|___ |_|___|__|  |")
   escreval("                                                                      |  |___|___ |___|___||         |_|___|_ |___|___||  |")
   escreval("                                                                      |  |_|___|_ |_|___|__|         |___|___ |_|___|__|  |")
   escreval("                                                                      |  |___|___ |___|___||         |_|___|_ |___|___||  |")
   escreval("                                                                      |  |_|___|_ |_|___|__|    .dP''Yb._|___ |_|___|__|  |")
   escreval("                                                                      |  |___|___ |___|___||  .d'       'b.|  |___|___||  |")
   escreval("                                                                      |  |_|___|_ |_|___|__|.d'     'b,   `Y.|_|___|__||  |")
   escreval("                                                                      |  |___|___ |___|___||d'    _   `Y,   `8|___|___||  |")
   escreval("                                                                      |  |_|___|_ |_|___|__|8     8    `8    9|_|___|__|  |")
   escreval("                                                                      |  |___|___ |___|___||`b, ,aP     P    8|___|___||  |")
   escreval("                                                                      |  |_|___|_ |_|___|__|  ''''     d'   .P|_|___|__|  |")
   escreval("                                                                      |  |___|___ |___|___||         ,8'   ,P'|___|___||  |")
   escreval("                                                                      |  |_|___|_ |_|___|__|`Ya,,__,,d''   ,P'|_|___|__|  |")
   escreval("                                                                      |  |        |___|___||  `'''''     ,P'  |___|___||  |")
   escreval("                                                                      |  |\_      |_|___|__|_          ,d'    |_|___|__|  |")
   escreval("                                                                      |  |  \_    |___|___||''YbaaaaaadP'     |___|___||  |")
   escreval("                                                                      |  |    \_  |_|___|__|                  |_|___|__|  |")
   escreval("                                                                      |__|_     \_|___|___||_________________ |___|___||__|")
   escreval("                                                                      |    \_     |_|___|__|\-----------------\_|___|__|  |")
   escreval("                                                                      |      \_   |___|___|\ \-----------------\__|___||  |")
   escreval("                                                                      |        \_ |_|___|___\ \-----------------\___|__|  |")
   escreval("                                                                      | _________\|___|___|__\_\-----------------\_____|__|")
   escreval("                                                                      |                                                   |")
   escreval("                                                                      |                                                   |")
   escreval("                                                                      | __________________________________________________|")
   ESCREVAL("                                                                       >[ 1 ]TERREO")
   F <- LEVELJOGADOR/10 + 1
   J <- INT(F)
   PARA J DE 1 ATE J FACA
      ESCREVAL("                                                                       >[",J+1," ]",J,"ºANDAR")
   FIMPARA
   leia(XA)
   ESCOLHA XA
   CASO 1
      LIMPATELA
   CASO 2
      LIMPATELA
      ANDAR1
   FIMESCOLHA
FIMPROCEDIMENTO
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
PROCEDIMENTO ANDAR1
VAR ADD:CARACTERE
INICIO
   ADD <- " "
   ALEATORIO 1,LEVELJOGADOR
   LEIA(MONSTROY)
   LIMPATELA
   aleatorio off
   aleatorio 1,10
   LEIA(XMONSTRO)
   LIMPATELA
   aleatorio off
   ESCOLHA XMONSTRO
   CASO 1
      MONSTRO <- "LOBO"
      TAMANHOMONSTRO <- COMPR(MONSTRO)
      REPITA
         SE TAMANHOMONSTRO < 8 ENTAO
            MONSTRO <- MONSTRO+ADD
            TAMANHOMONSTRO <- COMPR(MONSTRO)
         FIMSE
      ATE TAMANHOMONSTRO = 8
      MONSTROLEVEL <- MONSTROY
      MONSTROHP<-5 * MONSTROLEVEL
      MONSTROHPMAX<- MONSTROHP
      MONSTROATK<-MONSTROLEVEL+1
      MONSTRODEF<-MONSTROLEVEL+1
      MONSTROEXP<-MONSTROLEVEL*2
      MONSTRODANOMIN<-(MONSTROATK+(MONSTROATK*(25/100)))/2
      MONSTRODANOMAX<-MONSTROATK+(MONSTROATK*(25/100))
      LIMPATELA
      LOBO
   CASO 2
      MONSTRO <- "ALCE"
      TAMANHOMONSTRO <- COMPR(MONSTRO)
      REPITA
         SE TAMANHOMONSTRO < 8 ENTAO
            MONSTRO <- MONSTRO+ADD
            TAMANHOMONSTRO <- COMPR(MONSTRO)
         FIMSE
      ATE TAMANHOMONSTRO = 8
      MONSTROLEVEL <- MONSTROY
      MONSTROHP<-5 * MONSTROLEVEL
      MONSTROHPMAX<- MONSTROHP
      MONSTROATK<-MONSTROLEVEL+1
      MONSTRODEF<-MONSTROLEVEL+1
      MONSTROEXP<-MONSTROLEVEL*2
      MONSTRODANOMIN<-(MONSTROATK+(MONSTROATK*(25/100)))/2
      MONSTRODANOMAX<-MONSTROATK+(MONSTROATK*(25/100))
      LIMPATELA
      ALCE
   CASO 3
      MONSTRO <- "VEADO"
      TAMANHOMONSTRO <- COMPR(MONSTRO)
      REPITA
         SE TAMANHOMONSTRO < 8 ENTAO
            MONSTRO <- MONSTRO+ADD
            TAMANHOMONSTRO <- COMPR(MONSTRO)
         FIMSE
      ATE TAMANHOMONSTRO = 8
      MONSTROLEVEL <- MONSTROY
      MONSTROHP<-5 * MONSTROLEVEL
      MONSTROHPMAX<- MONSTROHP
      MONSTROATK<-MONSTROLEVEL+1
      MONSTRODEF<-MONSTROLEVEL+1
      MONSTROEXP<-MONSTROLEVEL*2
      MONSTRODANOMIN<-(MONSTROATK+(MONSTROATK*(25/100)))/2
      MONSTRODANOMAX<-MONSTROATK+(MONSTROATK*(25/100))
      LIMPATELA
      VEADO
   CASO 4
      MONSTRO <- "ARANHA"
      TAMANHOMONSTRO <- COMPR(MONSTRO)
      REPITA
         SE TAMANHOMONSTRO < 8 ENTAO
            MONSTRO <- MONSTRO+ADD
            TAMANHOMONSTRO <- COMPR(MONSTRO)
         FIMSE
      ATE TAMANHOMONSTRO = 8
      MONSTROLEVEL <- MONSTROY
      MONSTROHP<-5 * MONSTROLEVEL
      MONSTROHPMAX<- MONSTROHP
      MONSTROATK<-MONSTROLEVEL+1
      MONSTRODEF<-MONSTROLEVEL+1
      MONSTROEXP<-MONSTROLEVEL*2
      MONSTRODANOMIN<-(MONSTROATK+(MONSTROATK*(25/100)))/2
      MONSTRODANOMAX<-MONSTROATK+(MONSTROATK*(25/100))
      LIMPATELA
      ARANHA
   CASO 5
      MONSTRO <- "MORCEGO"
      TAMANHOMONSTRO <- COMPR(MONSTRO)
      REPITA
         SE TAMANHOMONSTRO < 8 ENTAO
            MONSTRO <- MONSTRO+ADD
            TAMANHOMONSTRO <- COMPR(MONSTRO)
         FIMSE
      ATE TAMANHOMONSTRO = 8
      MONSTROLEVEL <- MONSTROY
      MONSTROHP<-5 * MONSTROLEVEL
      MONSTROHPMAX<- MONSTROHP
      MONSTROATK<-MONSTROLEVEL+1
      MONSTRODEF<-MONSTROLEVEL+1
      MONSTROEXP<-MONSTROLEVEL*2
      MONSTRODANOMIN<-(MONSTROATK+(MONSTROATK*(25/100)))/2
      MONSTRODANOMAX<-MONSTROATK+(MONSTROATK*(25/100))
      LIMPATELA
      MORCEGO
   OUTROCASO
      LIMPATELA
      ESCREVAL("                                                                          >VOCÊ EXPLOROU O ANDAR E NÃO ENCONTROU NADA<")
      PORTAL
   FIMESCOLHA
FIMPROCEDIMENTO
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
PROCEDIMENTO LOBO
VAR ENCONTRO:INTEIRO
INICIO
   escreval("                                                                ____________________________________________________________________")
   ESCREVAL("                                                               |                       >VOCÊ ENCONTROU UM LOBO<                     |")
   ESCREVAL("                                                               |                              > LEVEL",MONSTROLEVEL," <                           |")
   ESCREVAL("                                                               |                                       ,     ,                      |")
   ESCREVAL("                                                               |                                       |\---/|                      |")
   ESCREVAL("                                                               |                                      /  , , |                      |")
   ESCREVAL("                                                               |                                 __.-'|  / \ /                      |")
   ESCREVAL("                                                               |                        __ ___.-'        ._O|                       |")
   ESCREVAL("                                                               |                     .-'  '        :      _/                        |")
   ESCREVAL("                                                               |                    / ,    .        .     |                         |")
   ESCREVAL("                                                               |                   :  ;    :        :   _/                          |")
   ESCREVAL("                                                               |                   |  |   .'     __:   /                            |")
   ESCREVAL("                                                               |                   |  :   /'----'| \  |                             |")
   ESCREVAL("                                                               |                    \  |\  |      | /| |                            |")
   ESCREVAL("                                                               |                     '.'| /       || \ |                            |")
   ESCREVAL("                                                               |                     | /|.'       '.l \\_                           |")
   ESCREVAL("                                                               |                     || ||             '-'                          |")
   ESCREVAL("                                                               |                     '-''-'                                         |")
   escreval("                                                               |____________________________________________________________________|")
   ESCREVAL("                                                                                          [1] LUTAR [2] FUGIR")
   ESCREVA("                                                                                                  >")
   LEIA(ENCONTRO)
   ESCOLHA ENCONTRO
   CASO 1
      LIMPATELA
      COMBATE
   CASO 2
      LIMPATELA
      ESCREVAL("                                                                                   VOCÊ FUGIU E RETORNARA À CIDADE!")
      TIMER 100
      TIMER 0
   FIMESCOLHA
FIMPROCEDIMENTO

PROCEDIMENTO ALCE
VAR ENCONTRO:INTEIRO
INICIO
   escreval("                                                                ____________________________________________________________________")
   ESCREVAL("                                                               |                       >VOCÊ ENCONTROU UM ALCE<                     |")
   ESCREVAL("                                                               |                              > LEVEL",MONSTROLEVEL," <             |")
   ESCREVAL("                                                               |                                               .      /|            |")
   ESCREVAL("                                                               |                                          /) \ |\    /|             |")
   ESCREVAL("                                                               |                                    (\\|  || \)u|   |F     /)       |")
   ESCREVAL("                                                               |                                     \```.FF  \  \  |J   .'/        |")
   ESCREVAL("                                                               |                                  __  `.  `|   \  `-'J .'.'         |")
   ESCREVAL("                                                               |           ______           __.--'  `-. \_ J    >.   `'.'   .       |")
   ESCREVAL("                                                               |       _.-'      ''`-------'           `-.`.`. / )>.  /.' .<'       |")
   ESCREVAL("                                                               |     .'                                   `-._>--' )\ `--''         |")
   ESCREVAL("                                                               |     F .                                          ('.--''           |")
   ESCREVAL("                                                               |    (_/                                            '\               |")
   ESCREVAL("                                                               |     \                                             'o`.             |")
   ESCREVAL("                                                               |     |\                                                `.           |")
   ESCREVAL("                                                               |     J \          |              /      |                \          |")
   ESCREVAL("                                                               |      L \                       J       (             .  |          |")
   ESCREVAL("                                                               |      J  \      .               F        _.--'`._  /`. \_)          |")
   ESCREVAL("                                                               |       F  `.    |                       /        ''   ''            |")
   ESCREVAL("                                                               |       F   /\   |_          ___|   `-_.'                  '-''-'    |")
   ESCREVAL("                                                               |      /   /  F  J `--.___.-'   F  - /                  '-''-'       |")
   ESCREVAL("                                                               |     /    F  |   L            J    /|                  '-''-'       |")
   ESCREVAL("                                                               |    (_   F   |   L            F  .'||                  '-''-'       |")
   ESCREVAL("                                                               |     L  F    |   |           |  /J  |                  '-''-'       |")
   ESCREVAL("                                                               |     | J     `.  |           | J  | |              ____.---.__      |")
   ESCREVAL("                                                               |     |_|______ \  L          | F__|_|___.---------'                 |")
   ESCREVAL("                                                               |   --'        `-`--`--.___.-'-'---                                  |")
   ESCREVAL("                                                               |                     '-''-'                                         |")
   escreval("                                                               |____________________________________________________________________|")
   ESCREVAL("                                                                                          [1] LUTAR [2] FUGIR")
   ESCREVA("                                                                                                  >")
   LEIA(ENCONTRO)
   ESCOLHA ENCONTRO
   CASO 1
      LIMPATELA
      COMBATE
   CASO 2
      LIMPATELA
      ESCREVAL("                                                                                   VOCÊ FUGIU E RETORNARA À CIDADE!")
      TIMER 100
      TIMER 0
   FIMESCOLHA
FIMPROCEDIMENTO

PROCEDIMENTO VEADO
VAR ENCONTRO:INTEIRO
INICIO
   escreval("                                                                ____________________________________________________________________")
   ESCREVAL("                                                               |                       >VOCÊ ENCONTROU UM VEADO<                    |")
   ESCREVAL("                                                               |                              > LEVEL",MONSTROLEVEL," <             |")
   ESCREVAL("                                                               |                                                                    |")
   ESCREVAL("                                                               |                       /|       |\                                  |")
   ESCREVAL("                                                               |                    `__\\       /|__'                               |")
   ESCREVAL("                                                               |                   ||      ||                                       |")
   ESCREVAL("                                                               |                     \__`\     |'__/                                |")
   ESCREVAL("                                                               |                       `_\\   /|_'                                  |")
   ESCREVAL("                                                               |                       _.,:---;,._                                  |")
   ESCREVAL("                                                               |                       \_:     :_/                                  |")
   ESCREVAL("                                                               |                        |@. .@|                                     |")
   ESCREVAL("                                                               |                        |     |                                     |")
   ESCREVAL("                                                               |                        ,\.-./ \                                    |")
   ESCREVAL("                                                               |                        ;;`-'   `---__________-----.-.              |")
   ESCREVAL("                                                               |                        ;;;                         \_\             |")
   ESCREVAL("                                                               |                        ';;;                         |              |")
   ESCREVAL("                                                               |                         ;    |                      ;              |")
   ESCREVAL("                                                               |                          \   \     \        |      /               |")
   ESCREVAL("                                                               |                           \_, \    /        \     |\               |")
   ESCREVAL("                                                               |                            |';|  |,,,,,,,,/ \    \ \_              |")
   ESCREVAL("                                                               |                            |  |  |           \   /   |             |")
   ESCREVAL("                                                               |                            \  \  |           |  / \  |             |")
   ESCREVAL("                                                               |                             | || |           | |   | |             |")
   ESCREVAL("                                                               |                             | || |           | |   | |             |")
   ESCREVAL("                                                               |                             | || |           | |   | |             |")
   ESCREVAL("                                                               |                             |_||_|           |_|   |_|             |")
   ESCREVAL("                                                               |                            /_|/_|           /_/   /_/              |")
   escreval("                                                               |____________________________________________________________________|")
   ESCREVAL("                                                                                          [1] LUTAR [2] FUGIR")
   ESCREVA("                                                                                                  >")
   LEIA(ENCONTRO)
   ESCOLHA ENCONTRO
   CASO 1
      LIMPATELA
      COMBATE
   CASO 2
      LIMPATELA
      ESCREVAL("                                                                                   VOCÊ FUGIU E RETORNARA À CIDADE!")
      TIMER 100
      TIMER 0
   FIMESCOLHA
FIMPROCEDIMENTO

